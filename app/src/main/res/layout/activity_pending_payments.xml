<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBG"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/rounded_edittext_gray"
        android:orientation="horizontal">


        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Online"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="18 hr 0 min"
            android:textSize="@dimen/_10sdp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/rounded_edittext_gray"
        android:orientation="horizontal">


        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/total_trips"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="102"
            android:textSize="@dimen/_10sdp"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/rounded_edittext_white"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_8sdp"


            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/GlobalTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Payment ID : 230230230"
                    android:textSize="@dimen/_12sdp"></TextView>


            </LinearLayout>

            <TextView

                style="@style/GlobalTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="@drawable/pending_bg"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text=" Pending "
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>


        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:text="Payment scheduled on Aug 10"
            android:textColor="@color/appTextGray"
            android:textSize="@dimen/_10sdp"></TextView>

        <TextView
            style="@style/GlobalTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/details_bg"
            android:fontFamily="@font/inter_medium"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:text="@string/details"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"

            />

    </LinearLayout>

    <TextView
        style="@style/GlobalTextViewBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/pending_payments"
        android:textSize="@dimen/_14sdp"></TextView>

    <include layout="@layout/item_pending_payments" />

    <include layout="@layout/item_pending_payments" />

    <include layout="@layout/item_pending_payments" />

    <include layout="@layout/item_pending_payments" />

    <include layout="@layout/item_pending_payments" />

</LinearLayout>