<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.fragments.AddVehiclesStep1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"

            app:cardBackgroundColor="@color/quantum_bluegrey50"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_reg"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorLightBlue"
                android:gravity="center"
                android:orientation="vertical">>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icCamera"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_blue"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_menu_camera" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/GlobalTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/click_to_add_vehicle_registration_image"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardBackgroundColor="@color/quantum_bluegrey50"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorLightBlue"
                android:gravity="center"
                android:orientation="vertical">>

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_blue"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_menu_camera" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/GlobalTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/click_to_add_vehicle_insurance_image"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardBackgroundColor="@color/quantum_bluegrey50"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorLightBlue"
                android:gravity="center"
                android:orientation="vertical">>

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_blue"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_menu_camera" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/GlobalTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/click_to_add_fitness_certificate_image"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardBackgroundColor="@color/quantum_bluegrey50"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorLightBlue"
                android:gravity="center"
                android:orientation="vertical">>

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_blue"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_menu_camera" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/GlobalTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/click_to_add_vehicle_permit_image"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/blue_button_bgr"
        android:text="@string/save_next"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />
</RelativeLayout>