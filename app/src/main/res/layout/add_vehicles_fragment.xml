<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_type_of_vehicle"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llVehicleType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/rounded_edittext_gray"
            android:orientation="horizontal"
            android:weightSum="1">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tVVehicleType"
                style="@style/GlobalTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.9"
                android:hint="@string/vehicle_type"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_8sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_brand"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llVehicleName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/rounded_edittext_white"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_2sdp"
            android:weightSum="1">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tVBrand"
                style="@style/GlobalTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.9"
                android:background="@drawable/rounded_edittext_white"
                android:hint="Brand Name"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_8sdp" />

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_model"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llVehicleModelName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/rounded_edittext_white"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_2sdp"
            android:weightSum="1">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tVModelName"
                style="@style/GlobalTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.9"
                android:background="@drawable/rounded_edittext_white"
                android:hint="Model Name"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_8sdp" />

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>