<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/GlobalTextViewBoldStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/reason_for_rejection"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason1" />

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason2" />

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason3" />

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason4" />

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason5" />

        <RadioButton
            style="@style/GlobalTextViewStyle"
            android:text="Rejection Reason6" />


    </RadioGroup>


    <Button
        android:id="@+id/btnReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorFullRed"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="@dimen/_20sdp"
        android:text="@string/reject"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/_5sdp"
        />
</LinearLayout>